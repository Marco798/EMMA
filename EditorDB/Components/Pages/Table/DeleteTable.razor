@page "/deleteTable"
@using System.Data.SqlClient
@using EditorDB.Components.Modals
@rendermode InteractiveServer

@inject Services.MainService mainService
<head>
	<link href="css/TableStyle.css" rel="stylesheet" />
</head>

<div>
	<div class="DIV_Title">
		<span class="SPN_Title">Delete Table</span>
	</div>
	<select @onchange="SelectedTable_OnChange" value="@selectedValue">
		<option value="">---</option>
		@foreach (Tables_Record table in mainService.Tables_RecordList) {
			<option value="@table.TABLE_NAME">@table.TABLE_NAME</option>
		}
	</select>

	<button @onclick="Save_Click">Save</button>
</div>

@if (showConfirmModal) {
	<ConfirmModal Title="Confirm Deletion" Content="Confirm deletion?" OnButtonClicked="SaveConfirmed" />
}

@if (showNotifyModal) {
	<NotifyModal Title="Operation terminated" Content="Confirm deletion?" OnButtonClicked="() => {showNotifyModal = false;}" />
}

@code {
	Dictionary<string, Tables_Record> tables_Dictionary = new();
	Tables_Record tables_Record = new();
	string selectedValue = string.Empty;

	bool showConfirmModal = false;
	bool showNotifyModal = false;

	protected override void OnInitialized() {
		base.OnInitialized();
		tables_Dictionary = mainService.Tables_RecordList.ToDictionary(x => x.TABLE_NAME, x => x);
	}

	protected void SelectedTable_OnChange(ChangeEventArgs e) {
		selectedValue = e.Value?.ToString() ?? string.Empty;

		if (tables_Dictionary.ContainsKey(selectedValue))
			tables_Dictionary.TryGetValue(selectedValue, out tables_Record!);
		else
			tables_Record = new();
	}

	protected void Save_Click() {
		showConfirmModal = true;
	}

	protected void SaveConfirmed(bool yesClicked) {
		if (!yesClicked) {
			showConfirmModal = false;
			return;
		}

		SqlConnection connection = mainService.connection;
		connection.Open();

		SqlTransaction transaction = connection.BeginTransaction();
		try {
			using (SqlCommand command = connection.CreateCommand()) {
				command.Transaction = transaction;

				// string query = $"DROP TABLE {tables_Record.TABLE_NAME};\n";
				// query += $"DELETE SYST_TABLE WHERE TABLE_NAME = '{tables_Record.TABLE_NAME}';\n";
				// query += $"DELETE SYST_COLUMN WHERE TABLE_NAME = '{tables_Record.TABLE_NAME}';";

				// command.CommandText = query;
				// command.ExecuteNonQuery();
			}

			transaction.Commit();
			connection.Close();
		}
		catch (Exception ex) {
			transaction.Rollback();
			connection.Close();
			throw new Exception($"Errore while deleting table {tables_Record.TABLE_NAME}: {ex.Message}");
		}

		mainService.Update();
		selectedValue = string.Empty;
		showConfirmModal = false;
		showNotifyModal = true;
	}
}
